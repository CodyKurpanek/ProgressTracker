<UserControl x:Class="ProgressTracker.View.Controls.NotesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProgressTracker.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <local:LinkButton Text="{Binding Date}" 
               Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        <TextBlock Padding="5,0,0,0" Text="{Binding Title}"/>
    </StackPanel>
</UserControl>
